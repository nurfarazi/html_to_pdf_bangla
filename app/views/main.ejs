</head>

<body>

    <h1>Hello World</h1>


    <div class="btn-group">
        <div class="btn btn-success buttin_click_1" type="button">download</div>
        <div class="btn btn-danger button_click_2" type="button">open</div>
    </div>




</body>

<script>
    $(document).ready(function () {

        var docDefinition = {
            content: 'যদি কখনও ভিনসেন্ট ভ্যান গগ আমাকে আকতো! ',
            defaultStyle: {
                font: 'Siyamrupali'
            }
        };
        $('.buttin_click_1').click(function () {
            console.log('btn 1 clicked');
            pdfMake.fonts = {
                kalpurush: {
                    normal: 'kalpurush ANSI.ttf'
                },
                Siyamrupali: {
                    normal: 'Siyamrupali.ttf'
                }
            };


            pdfMake.createPdf(docDefinition).open();
        });

        $('.button_click_2').click(function () {
            console.log('btn 2 clicked');
        });
    });
</script>


</html>
